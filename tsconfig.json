{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "include": [
    "src/**/*.ts",
    "**/*.eslintrc.js",
    "./config/db.ts"
],
  "exclude": [
    "node_modules",
    "package.json",
    "package-lock.json",
    "dist"
  ]
}